# Environment
NODE_ENV=development

# Server
PORT=3000

# Logging
LOG_LEVEL=info
LOG_PRETTY=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/hyperliquid?schema=public
DATABASE_MAX_CONNECTIONS=10
DATABASE_CONNECTION_TIMEOUT=10000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# Redis Cache Retention (in days)
REDIS_TRADES_RETENTION=7
REDIS_POSITIONS_RETENTION=30
REDIS_ALERTS_RETENTION=30

# Caching Configuration
CACHE_MEMORY_ENABLED=true
CACHE_MEMORY_MAX_SIZE=50
CACHE_MEMORY_TTL=10
CACHE_REDIS_TTL=30
CACHE_WARM_ON_STARTUP=true

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_FREE_REQUESTS=60
RATE_LIMIT_PRO_REQUESTS=300
RATE_LIMIT_API_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60

# Hyperliquid API Configuration
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
HYPERLIQUID_TESTNET=false
HYPERLIQUID_TIMEOUT=5000

# Feature Flags
RATE_LIMIT_ENABLED=true
ANALYTICS_ENABLED=true

# Sentry Configuration (Error Monitoring)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0
